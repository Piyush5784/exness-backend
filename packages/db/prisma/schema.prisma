generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum pnl {
  PROFIT
  LOSS
}

model User {
  id             String          @id @default(uuid(4))
  email          String          @unique
  lastLoggedIn   DateTime?
  balance        Int             @default(5000)
  balanceDecimal String          @default("0")
  ExistingTrade  ExistingTrade[]
}

model ExistingTrade {
  id                String   @id @default(uuid(4))
  openPrice         String
  openPriceDecimal  String
  closePrice        String
  closePriceDecimal String
  leverage          Float
  pnl               pnl
  pnlPrice          String
  liquidated        Boolean
  createdAt         DateTime @default(now())
  user              User     @relation(fields: [userEmail], references: [email])
  userEmail         String
  asset             Asset    @relation(fields: [assetSymbol], references: [symbol])
  assetSymbol       String
}

model Asset {
  id             String          @id @default(uuid(4))
  symbol         String           @unique
  imageUrl       String
  name           String
  decimals       Int
  existingTrages ExistingTrade[]
}
